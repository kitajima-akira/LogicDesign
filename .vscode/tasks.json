{
    // 1回だけpowershellを管理者で起動し、次のコマンドを入力
    // Set-ExecutionPolicy RemoteSigned
    //
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LogicDesign: Update",
            "detail": "LogicDesignを最新版に更新します。",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": "git fetch origin; git reset --hard origin/main",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Quartus > Analysis & Elaboration",
            "detail": "Quartusで文法のチェックを行います。",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": [
                "./bin/setAsTopLevelEntity.bat ${fileBasename} ${workspaceFolderBasename};",
                "if ($?) {quartus_map --analysis_and_elaboration ${file} -c ${workspaceFolderBasename}; ${fileDirname}/bin/makesimulationScript.ps1 ${file} ${workspaceFolderBasename}}"
            ],
            "problemMatcher": [
                {
                    "owner": "vhd",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^\\s*(Error|Warning) \\(\\d+\\): (.*) File: (.*) Line: (\\d+)$",
                        "file": 3,
                        "line": 4,
                        "message": 2,
                        "severity": 1
                    }
                }
            ],
            "presentation": {
                "revealProblems": "onProblem"
            },
            "group": "build"
        },
        {
            "label": "Quartus > Netlist Viewer",
            "detail": "Quartusで回路図を表示します。(事前にAnalysis & Elaborationが必要)",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": "quartus_npp ${file} -c ${workspaceFolderBasename} --netlist_type=sgate; qnui ${fileDirname}/${workspaceFolderBasename}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Quartus > Run Questa Simulator",
            "detail": "Questaシミュレータでシミュレーションを実行します。(事前にAnalysis & Elaborationが必要)",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": "cd ${fileDirname}\\simulation\\questa; vsim -do \\\"do run_${workspaceFolderBasename}.do\\\"; del wlf*",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "Quartus > Program for configuration",
            "detail": "回路データをFPGAボードに書き込みます。(事前にCompileが必要)",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": "quartus_pgm --cable=\\\"USB-Blaster [USB-0]\\\" --mode=jtag -o \\\"p;output_files/LogicDesign.sof\\\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Quartus > Compile",
            "detail": "回路データを生成します。",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
            },
            "command": [
                "./bin/setAsTopLevelEntity.bat ${fileBasename} ${workspaceFolderBasename};",
                "quartus_sh --flow compile ${workspaceFolderBasename}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
